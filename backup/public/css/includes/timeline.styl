.postEffects {
  box-shadow: 0 1px 2px var(--shadow-2);
  background-color: var(--surface-background);
  border-radius: 8px;
  margin-bottom: 20px;
}

#newPostArea {
  padding: 12px 16px 10px;
  display: flex;
  flex-direction: column;

  &>div{
    &:first-of-type {
      display: flex;

      &>img {
        width: 40px;
        height: 40px;
        border-radius: 100%;
        margin-right: 8px;
      }

      div {
        border-radius: 20px;
        background-color: var(--comment-background);
        flex-grow: 1;
        padding: 0 12px;
        display: flex;
        align-items: center;
        color: var(--secondary-text);
        cursor: pointer;

        &:hover {
          background-color: rgba(0, 0, 0, 0.1);
        }
      }
    }

    &:nth-of-type(2) {
      border-top: solid 1px var(--secondary-button-background);
      margin: 10px 0;
    }

    &:last-of-type {
      display: flex;

      &>a {
        flex-grow: 1;
        &>div {
          display: flex;
          justify-content: center;
          border-radius: 8px;
          padding: 8px;
          color: var(--secondary-text);
          font-weight: 600;
          font-size: 15px;

          &:hover {
            background-color: var(--new-post-hover-background);
          }
        }
      }

      img {
        margin-right: 8px;
      }
    }
  }
}

#postArea>div {
  display: flex;
  flex-direction: column;
  padding: 12px 0 10px;
  
  &>div {
    padding: 0 16px;

    &.postHeader {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      position: relative;

      &>div {
        &:first-of-type {
          width: 40px;
          height: 40px;
          border-radius: 50%;
          overflow: hidden;

          &>a, &>a>img {
            width: 100%;
            height:100%;
          }
        }

        &:nth-of-type(2) {
          padding: 0 10px;
          flex-grow: 1;
          display: flex;
          flex-direction: column;
          align-items: flex-start;

          &>a>span {
            font-weight: 600;
          }

          &>span {
            color: var(--secondary-text);
            font-weight: 400;
            font-size: 13px;
          }
        }

        &:nth-of-type(3) {
          width: 36px;
          height: 36px;
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
        }
      }

      
    }

    &.postMain {
      display: flex;
      flex-direction: column;
      gap: 12px;
      padding: 0;

      &>div:first-of-type {
        word-break: break-all;
        padding: 0 16px;
      }

      &>div:nth-of-type(2) {
        width:100%;

        &>div {
          position: relative;
          padding-top: 100%;

          &>div {
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            gap: 2px;

            &>.firstPhotoLine {
              flex: 1 1 0;
              display: flex;
              gap: 2px;

              &>div {
                flex: 1 0 49%;
                
                &>div {
                  padding-top: 100%;
                  position: relative;
                
                  &>img {
                    position: absolute;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    border-top: 1px solid var(--shadow-1);
                    border-bottom: 1px solid var(--shadow-1);
                    cursor: pointer;
                  }
                }
              }
            }

            &>.secondPhotoLine {
              flex: 1 1 0;
              display: flex;
              gap: 2px;

              &>div {
                flex: 1 0 49%;
                height: 100%;
                position: relative;
                
                &>img {
                  position: absolute;
                  top: 0;
                  width: 100%;
                  height: 100%;
                  object-fit: cover;
                  border-top: 1px solid var(--shadow-1);
                  border-bottom: 1px solid var(--shadow-1);
                  cursor: pointer;
                }

                &>div {
                  position: absolute;
                  top: 0;
                  width: 100%;
                  height: 100%;
                  background-color: var(--always-dark-overlay);
                  display: flex;
                  align-items: center;
                  justify-content: center;

                  &>span {
                    font-size: 32px;
                    font-weight: bold;
                    color: white;
                  }
                }
                // &>div {
                //   padding-top: 100%;
                //   position: relative;
                
                //   &>img {
                //     position: absolute;
                //     top: 0;
                //     width: 100%;
                //     height: 100%;
                //     object-fit: cover;
                //   }
                // }
              }
            }
          }
        }
      }
    }

    &:nth-of-type(3) {
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-size: 15px;
      color: var(--secondary-text);
      height: 43px;


      .numLike {
        display: flex;
        cursor: default;
        img {
          width: 18px;
          margin-right: 6px;
        }
      }
    }

    &:nth-of-type(4) {
      display: flex;
      border-top: 1px solid var(--divider);
      border-bottom: 1px solid var(--divider);
      margin: 4px 0;

      &>div {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 42px;
        cursor: pointer;

        font-weight: 600;
        color: var(--secondary-text);
        font-size: 15px;

        &>span {
          width: 18px;
          height: 18px;
          margin-right: 5px;
        }

        .icon--liked {
          background-image: url(/images/main/mainCenter/ApdwcOCLmEg.png);
          background-position: 0px -275px;
        }

        .icon--like {
          background-image: url(/images/main/mainCenter/ApdwcOCLmEg.png);
          background-position: 0px -313px;
        }

        .icon--comment  {
          background-image: url(/images/main/mainCenter/ApdwcOCLmEg.png);
          background-position: 0px -237px;
        }

        .icon--share  {
          background-image: url(/images/main/mainCenter/ApdwcOCLmEg.png);
          background-position: 0px -389px;
          filter: var(--filter-secondary-icon);
        }
      }

      &:nth-of-type(2)>div>div:first-child {
        font-size: 20px;
        font-weight: 300;
        margin-right: 5px;
      }
    }

    &:last-of-type {
      .commentItem {
        display: flex;
        padding-top: 4px;
        
        &>img {
          width: 32px;
          height: 32px;
          border-radius: 50%;
          margin-right: 8px;
        }

        &>div {
          display: flex;
          flex-direction: column;
          flex-grow: 1;

          &>div:first-of-type {
            display: flex;
            align-items: center;
            gap: 5px;

            &:hover>div:last-of-type>div {
              // 수정 및 삭제 버튼
              opacity: 1;
            }

            &>div:first-of-type {
              background-color: var(--comment-background);
              border-radius: 18px;
              padding: 8px 12px;
              position: relative;
              word-break: break-word;
              width: fit-content;

              &>div:first-of-type {
                font-size: 13px;
                font-weight: bold;
              }
              &>div:nth-of-type(2) {
                font-size: 15px;
                
              }
              &>div:nth-of-type(3) {
                position: absolute;
                bottom: -11px;
                right: 2px;
                display: flex;
                cursor: default;
                background-color: white;
                border-radius: 10px;
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.2);
                padding: 2px;
                font-size: 13px;
                color: var(--secondary-text);

                img {
                  width: 16px;
                  margin-right: 6px;
                }
              }
            }

            &>div:last-of-type {
              width: 32px;
              height: 32px;
              flex-shrink: 0;

              &>div {
                width: inherit;
                height: inherit;
                border-radius: 50%;
                background-color: var(--hover-overlay);
                cursor: pointer;
                opacity: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative;

                &>i {
                  width: 16px;
                  height 16px;
                  background-image: url('/images/main/mainCenter/_P4nCKl1-P8.png');
                  background-position: 0px -731px;
                }

                &>div {
                  position: absolute;
                  z-index: 1;
                  top: 115%;
                  left: -59px;
                  width: 150px;
                  background-color: white;
                  padding: 8px;
                  border-radius: 8px;
                  box-shadow: 0 12px 28px 0 var(--shadow-2),0 2px 4px 0 var(--shadow-1);

                  &>div {
                    height: 34px;
                    padding: 0 8px;
                    border-radius: 4px;
                    display: flex;
                    align-items: center;

                    &:hover {
                      background-color: var(--hover-overlay);  
                    }
                  }
                }
              }
            }
          }
          
          &>div:last-of-type {
            margin-left: 12px;
            font-size: 12px;
            color: var(--secondary-text);

            span {
              cursor: pointer;

              &:not(:last-of-type) {
                font-weight: bold;
              }
              &:hover {
                text-decoration: underline;
              }
            }

          }
        }
      }

      label {
        display: flex;
        font-size: 15px;
        font-weight: bold;
        padding: 4px 0px;

        &>img {
          width: 32px;
          height: 32px;
          border-radius: 50%;
          margin: 2px 8px 0 0;
        }

        &>div {
          flex-grow: 1;

          &>div:first-of-type  {
            background-color: var(--comment-background);
            border-radius: 20px;
            border: none;
            display: flex;
            align-items: center;
          }

          // commentEditCancel
          &>div:nth-of-type(2) {
            font-size: 12px;
            font-weight: normal;

            a {
              color: var(--accent);
              cursor: pointer;

              &:hover {
                text-decoration: underline;
              }

              &:visited {
                color: var(--accent);
              }
            }
          } 
        }

        input {
          width: 100%;
          background-color: transparent;
          border: none;
          padding: 10px 12px 9px;
          font-size: 15px;
        }
      }
    }
    
    .text-liked {
      color: var(--accent);
      // color:rgb(32, 120, 244);
    }

    // &~div {
    //     margin-top: 10px;
    // }
  } 
}

.accountHoverTab {
  position: absolute;
  // bottom: 95%;
  top: 0;
  left: 0;
  // transform: translateX(-35%);
  display: flex;
  flex-direction: column;
  width: 400px;
  padding: 16px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 0 8px 0 lightgray;

  &>div {
    &:first-of-type {
      display: flex;
      align-items: center;

      &>div {
        &:first-of-type {
          width: 96px;
          height: 96px;
          border-radius: 50%;
          overflow: hidden;

          &>a>img {
            width: 96px;  
            height: 96px;
          }
        }
        
        &:last-of-type {
          flex-grow: 1;

          &>a>span {
            padding: 0 16px;
            font-size: 20px;
            font-weight: 700;
          }
        }
      }
    }

    &:last-of-type>div {
      display: flex;
      padding: 6px 0;
      gap: 0 8px;

      &>div {
        width: 48px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--secondary-button-background);
        border-radius: 8px;
        cursor: pointer;

        &:first-of-type {
          flex-grow: 1;

          &>img, svg {
            margin-right: 6px;
          }
        }

        img {
          width: 16px;
          height: 16px;
        }

        span {
          font-size: 15px;
          font-weight: 600;
        }
      }

      .friendBtn {
        position: relative;
      }

      .friendOptTab {
        position: absolute;
        bottom: -55px;
        left: 0;
        width: 344px;
        border-radius: 8px;
        background-color: white;
        box-shadow: 0 12px 28px 0 var(--shadow-2),
          0 2px 4px 0 var(--shadow-1);
        padding: 8px 0;
        
        &>div {
          height: 36px;
          border-radius: 8px;
          padding: 8px;
          margin: 0 8px;
          display: flex;
          align-items: center;

          &:hover {
            background-color: var(--secondary-button-background);
          }

          span {
            font-weight: 500;
          }

          &.unfriendBtn {
            i {
              background-image: url(/images/main/mainCenter/unfriend.png);
              background-position: 0 -25px;
              display: inline-block;
              height: 20px;
              width: 20px;
              margin-right: 12px;
            }
          }
        }
      }
    }
  }
}