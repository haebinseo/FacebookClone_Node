* {
  box-sizing: border-box;
}


a {
  text-decoration: none;

  &[href="#"] {
    cursor: default;
  }

  &:hover {
    text-decoration: underline;
  }
      
  &:visited {
    color: #385898;
  }
}

body {
  height:860px;
  margin: 0;
  line-height: 1.34;
  display:grid;
  grid-template-rows: 82px 1fr 168px;
  font-family: "fontello", Helvetica, Arial, sans-serif;
  overflow-y: scroll;
}

input {
  outline: none;
  
  &:focus::placeholder {
    color: rgba(0, 0, 0, 0.2);
  }
}


header {
  background-color: #3b5998;
  background-image: linear-gradient(#4e69a2, #3b5998 50%);
  border: 1px solid #133783;
  display:flex;
  justify-content: center;
  padding: 13px 0 4px 0;

  &>div {
    width: 980px;
    display: flex;
    justify-content: space-between;

    &>div {
      display: flex;
      align-items: center;

      #logo {
        width: 170px; 
        height: 34px;
        margin-top: 3px;
        background-image: url(../../images/login/HOIMHNE_Pj2.png);
        background-position: 0 -196px;
      }
    }

    #form_login {
      width: 376px;
      display: flex;
      // align-items: center;
      justify-content: space-between;

      &>div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 150px;

        &:last-child {
          width: 47px;
          /* height: 24px; */
          display: flex;
          flex-direction: row;
          align-items: center;
        }
      }

      label, div>div {
        font-size: 12px;
        height: 14px;
        color: white;
      }

      a {
        color: #9cb4d8;
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }

      input {
        height: 23px;
        border: 1px solid #1d2a5b;
      }
    }

    #loginBtn {
      width: 47px;
      height: 24px;
      margin-top: auto;
      margin-bottom: auto;
      padding: 0;
      background-color: #4267b2;
      border: 1px solid #29487d;
      border-radius: 2px;
      font-weight: bold;
      font-size: 12px;
      color: white;
      cursor: pointer;

      &:hover {
        background-color: #2B5B98;
      }
    }
  }
}


main {
  background-color: #e9ebee;
  display:flex;
  flex-direction: row;
  justify-content: center;
  padding: 18px 0;

  &>div {
    display:flex;
    flex-direction: row;
    color: #333333;

    &>div {
      width: 580px;
    }
  }
}

.head1 {
  font-size: 36px;
  font-weight: bold;
}

.head2 {
  font-size: 19px;
  margin-bottom: 20px;
}

#noLoginHistory {
  // display: none;
}

#loginHistory {
  display: none;

  &>div:last-child {
    display: grid;
    grid-template-columns: 30.5% 30.5% 30.5%;

    &>div {
      position: relative;
      width: 160px;
      border-radius: 4px;
      box-shadow: 0 0 0 1px #dddfe2;
      transition: all .2s ease-out;
      cursor: pointer;

      &:hover {
        box-shadow: 0 0 7px 5px #dddfe2;
      }

      #deleteHistoryBtn {
        position: absolute;
        left: 4px;
        top: 4px;
        background-color: rgba(0, 0, 0, .3);
        border-radius: 16px;
        height: 16px;
        transition: all 100ms cubic-bezier(.08,.52,.52,1);
        width: 16px;

        &>div {
          position: absolute;
          right: 2px;
          bottom: 2px;
          background-image: url(../../images/login/Bqfa_XiQjv3.png);
          background-position: -26px -361px;
          height: 12px;
          width: 12px;

          &:hover {
            background-image: url(../../images/login/Vb79ZNQ5DxJ.png);
            background-position: -334px -196px;
            width: 20px;
            height: 20px;
            /* opacity: 0; */
            transform: scale(.6);
            transform-origin: bottom right;
          }
        }

        &:hover {
          background-color: #ffffff;
          box-shadow: 1px 1px 2px 0 rgba(0, 0, 0, .3);
          transform: scale(1.5);
          transform-origin: bottom right;
        }
      }

      #tooltip {
        display: none;
        width: 180px;
        position: absolute;
        bottom: 104%;
        left: -7%;

        border-radius: 2px;
        background-color: rgba(0,0,0,.8);
        color: #ffffff;
        font-size: 12px;
        text-align: center;
        padding: 6px 0;
        z-index: 1;
        transition: all 100ms cubic-bezier(.08,.52,.52,1);

        &::after {
          content: "";
          position: absolute;
          top: 100%;
          left: 10%;
          margin-left: -7px;
          border-width: 4px;
          border-style: solid;
          border-color: black transparent transparent transparent;
        }
      }

      #deleteHistoryBtn:hover + #tooltip {
        display: inline-block;
      }

      #alarmSpan {
        position: absolute;
        right: -4px;
        top: -4px;
        width: 24px;
        height: 24px;
        background-color: #fa3e3e;
        box-shadow: -1px 1px 2px 0 rgba(0, 0, 0, .3);
        border-radius: 24px;
        text-align: center;
        color: #fff;
        font-size: 13px;
        line-height: 24px;
      }

      .userImage {
        height: 160px;
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
        background-color: #f5f6f7;
      }

      .userName {
        height: 46px;
        font-size: 18px;
        color: #4b4f56;
        background-color: #ffffff;
        
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      #user1_img {
        background-image: url(../../images/login/profile_img.jpg);
      }

      #user_add_img {
        display: flex;
        align-items: center;
        justify-content: center;

        &>div {
          width: 42px;
          height: 42px;
          background-image: url(../../images/login/DQDvQ2X3Nby.png);
          background-position: 0 -171px;
        }
      }

      #user_add_name {
          color: #385896;
      }
    }
  }        
}


#signUp {
  width: 400px;
  display: flex;
  flex-direction: column;
}



#form_signup>div {
  &:first-child {
    display: grid;
    grid-auto-columns: minmax(1em, auto);
    gap: 10px;
    margin-bottom: 20px;

    &>input {
      height: 39px;
      font-size: 18px;
      padding: 8px 10px;
      border: 1px solid #ccd0d5;
      border-radius: 5px;

      &:nth-child(3), &:nth-child(4) {
        /*first to third column line*/
        grid-column: 1/3;
      }
    }
  }

  .lableText {
    color: #90949c;
    font-size: 16px;
    font-weight: bold;
    margin: 10px 0 5px;
  }

  select {
    background-color: #fff;
    border: 1px solid #ccd0d5;
    font-size: 13px;
    height: 30px;
    padding: 5px;
  }

  select+a {
    margin-left: 5px;
  }

  #gender {
    display: flex;
    padding: 5px 0;

    div {
      margin-right: 17px;
      font-size: 18px;
      color: #1d2129;
    }
  }

  &:nth-child(4) {
    color: #777;
    font-size: 11px;
    padding-right: 80px;
    margin: 11px 0;
  }

  .moreInfo {
    text-decoration: none;
    color: #5F676F;
    font-size: 18px;

    &:hover {
      text-decoration: none;
    }

    &:visited {
      color: #5F676F;
    }
  }

  #submitBtn {
    background: linear-gradient(#67ae55, #578843);
    background-color: #69a74e;
    box-shadow: inset 0 1px 1px #a4e388;
    border: 1px solid;
    border-color: #3b6e22 #3b6e22 #2c5115;
    border-radius: 5px;
    width: 194px;
    padding: 3px 20px 7px 20px;
    margin: 10px 0;
    cursor: pointer;

    font-size: 19px;
    font-weight: bold;
    color: white;
    letter-spacing: 1px;
    text-shadow: 0 1px 2px rgba(0,0,0,.5);
  }

  &:last-child {
    border-top: 1px solid #dddfe2;
    color: #666;
    font-size: 13px;
    font-weight: bold;
    margin-top: 8px;
    padding-top: 15px;
  }
}


footer>div {
  height: 113px;
  margin: 36px 174px 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  &>ul {
    list-style-type: none;
    font-size: 12px;
    padding-inline-start: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;

    li {
      color: #737373;
      padding: 3px 10px 0 0;

      a {
        display: flex;

        div {
          width: 16px;
          height: 16px;
          background-image: url(../../images/login/adchoices.png);
          background-position: 0 -67px;
        }
      }
    }

    #moreLang {
      height: 20px;
      width: 30px;
      border: 1px solid #ccd0d5;
      border-radius: 2px;
      background-color: #f5f6f7;
      display: flex;
      align-items: center;
      justify-content: center;

      &>div {
        height: 12px;
        width: 12px;
        background-image: url(../../images/login//Zk8_83wcUCC.png);
        background-position: -39px -317px;
      }
    }

    &:nth-of-type(2) li {
      padding-right: 20px;
    }
  }

  &>div:last-child {
    color: #737373;
    font-size: 11px;
    margin-top: auto;
  }
}

.contentDivider {
  border-bottom: 1px solid #dddfe2;
  margin: 8px 0 6px;
}
