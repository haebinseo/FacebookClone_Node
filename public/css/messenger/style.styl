  // }

  #friendsListTab {
    // grid-area: friends;
    flex: 1 0 0;
    min-width 300px;
    border-right: 1px solid rgba(0, 0, 0, .10);
    
    &>div:first-of-type {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 16px;

      span {
        font-size: 24px;
        font-weight: bold;
      }

      &>div {
        display: flex;
        align-items: center;

        &>div {
          width: 36px;
          height 36px;
          background-color:rgba(0, 0, 0, .04);
          border-radius: 50%;
          margin-left: 12px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
      }
    }

    &>div:nth-of-type(2) {
      position: relative;
      padding: 4px 16px 12px;

      &>div {
        position: absolute;
        top: 14px;
        left: 29px;
        color: #8C949E;
        font-size: 20px;
      }

      &>form>input {
        min-width: 40px;
        width: 100%;
        height: 40px;
        padding: 9px 16px;
        background-color: rgba(0, 0, 0, .04);
        border-radius: 50px;
        font-size: 15px;
        text-indent: 20px;
        border: 0;
      }
    }
    
    &>div:last-of-type li {
      padding: 0 8px;
      cursor: pointer;

      .currentRoom {
        background-color: rgba(0, 0, 0, 0.05);
      }

      .unreadMsg {
        font-weight: bold;
        span {
          color: black;
        }
      }

      &>div {
        height: 64px;
        display: flex;
        align-items: center;
        padding: 0 8px;
        border-radius: 10px;

        &>div:first-of-type {
          height: 50px;
          width: 50px;
          flex-shrink: 0;
          border-radius: 50%;
          overflow: hidden;
          margin-right: 12px;

          img {
            height: inherit;
            width: inherit;
          }
        }

        &>div:last-of-type {
          display: flex;
          flex-direction: column;
          overflow: hidden;
          padding-right: 16px; 

          div {
            &:first-of-type {
              font-size: 15px;
            }
            &:last-of-type {
              display: flex;
              font-size: 13px;
              color: rgba(153, 153, 153, 1);
              margin-right: 12px;

              &>span {
                &:first-of-type {
                  overflow: hidden;
                  white-space: nowrap;
                  text-overflow: ellipsis;
                }
                &:nth-of-type(2) {
                  flex-shrink: 0;
                }
              }
            }
          }
        }
      }
    }
  }

  &>div:last-of-type {
    flex: 3 0 0;
    display: flex;
    flex-direction: column;

    #friendHead {
      // grid-area: head;
      flex: 0 0 60px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 8px 8px 8px 16px;
      border-bottom: 1px solid rgba(0, 0, 0, .10);

      &>div {
        &:first-of-type {
          display: flex;
          align-items: center;

          &>div {
            &:first-of-type {
              width: 40px;
              height: 40px;
              border-radius: 50%;
              overflow: hidden;
              margin-right: 12px;

              img {
                width: inherit;
                height: inherit;
              }
            }

            &:last-of-type {
              &>span:first-of-type {
                  font-size: 15px;
                  font-weight: bold;
              }
            }
          }
        }

        &:last-of-type {
          display: flex;
          gap: 12px;

          &>div {
            cursor: pointer;

            &:last-of-type {
              position: relative;
              .roomInfoActive {
                position: absolute;
                width: 32px;
                height: 32px;
                background-color: rgb(0, 153, 255);
                border-radius: 50%;
                opacity: 0.2;
              }
            }
          }
        }
      }
    }

    &>div:last-of-type {
      flex: 1 0 0;
      display: flex;

      #chat {
        // grid-area: chat;
        flex: 2 0 0;
        display: flex;
        flex-direction: column;
        border-right: 1px solid rgba(0, 0, 0, .10);

        &>div {
          flex-grow: 1;
          max-height: calc(100vh - 172px);
          padding: 0 12px;
          overflow-y: auto;

          &::-webkit-scrollbar {
            width: 7px;
          }
          &::-webkit-scrollbar-thumb {
            border-radius: 3px;
            background-color: transparent;
          }
          &:hover::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, 0.35);
          }
          
          &>div {
            display: flex;
            align-items: center;
          }
          
          .systemMsg {
            justify-content: center;

            &>div {
              width: fit-content;
              color: rgba(0, 0, 0, .40);
              font-size: 12px;
              justify-content: center;
              // align-self: center;
              margin: 12px 0;
              }
          }

          .myMsg {
            justify-content: flex-end;

            &:hover>.deleteMsgBtn {
              opacity: 1;
            }

            &>div:last-of-type {
              width: fit-content;
              background-color #0084ff;
              border-radius: 20px;
              padding: 6px 12px 7px;
              color: white;
              align-self: flex-end;
              margin: 2px;
              line-height: 1.28;
            }
          }

          .deleteMsgBtn {
            cursor: pointer;
            opacity: 0;
            margin-right: 10px;
            filter: opacity(0.7);
          }

          .friendMsg {
            &>div:last-of-type {
              width: fit-content;
              background-color #f1f0f0;
              border-radius: 20px;
              padding: 6px 12px 7px;
              margin: 2px;
              display: flex;
              align-items: center;
              line-height: 1.28;
              }
          } 

          .friendProfileImg {
            width: 28px;
            height 28px;
            overflow: hidden;
            border-radius: 50%;
            margin-right: 10px;

            img {
              width: inherit;
              height: inherit;
            }
          }

          .friendMsg.deletedMsg
          .myMsg.deletedMsg {
            &>div:last-of-type {
              background-color: white;
              border: 1px solid silver;
              font-style: italic;
              color: rgba(0, 0, 0, .4);
            }
          }
        }

        form {
          height: 52px;
          flex-shrink: 0;
          display: flex;
          align-items: center;
          padding: 0 8px;

          &>div {
            display: flex;
            align-items: center;

            &:first-of-type {
              margin-right: 8px;
            }

            &:nth-of-type(2) {
              gap: 8px;
              // margin-right: 10px;

              &>div {
                display: flex;
                align-items: center;
              }
            }

            &:nth-of-type(3) {
              flex-grow: 1;
              display: flex;
              margin: 8px;
              background-color: rgba(0, 0, 0, .05);
              border-radius: 18px;
              min-width: 100px;
              padding: 0 8px 0 12px;

              &>input {
                flex-grow: 1;
                background-color: transparent;
                border: none;
                padding: 10px 0;
                font-size: 14px;
              }
            }
          }
          
        }
      }
      #roomOptions {
        // grid-area: info;
        flex: 1 0 0;
        display: flex;
        flex-direction: column;

        &>div:first-of-type  {
          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 14px 14px 16px;

          &>div:first-of-type {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 8px;
          
            img {
              width: inherit;
              height: inherit;
            }
          }

          &>div:nth-of-type(2) {
            font-size: 20px;
            font-weight: 700;
          }
        }

        &>div:not(:first-of-type)  {
          border-top: 1px solid rgba(0, 0, 0, .10);
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 14px;
          color: rgba(0, 0, 0, .34);
          font-size: 14px;
          font-weight: bold;
          // text-transform: uppercase;

          &>div {
            background-image: url(/images/messenger/jPfIHDgdqWN.png);
            background-position: 0 -599px;
            height: 20px;
            width: 20px;
            transform: rotate(90deg);
          }
        }
      }
    }
