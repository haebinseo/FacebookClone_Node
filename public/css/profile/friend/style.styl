.postEffects {
  box-shadow: 0 1px 2px var(--shadow-2);
  background-color: var(--surface-background);
  border-radius: 8px;
  margin-bottom: 20px;
}

#main {
  display: flex;
  justify-content: center;
  min-height: calc(100vh - 396px);
}

#profileFriend {
  display: flex;
  width: 908px;
  margin-top: 16px;
  padding: 0 16px;

  &>div:first-of-type {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    padding: 16px;

    &>div:first-of-type>span {
      font-size: 20px;
      font-weight: bold;
    }

    &>div:nth-of-type(2) {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;

      &>div {
        width: calc(50% - 4px);
        border-radius: 8px;
        box-shadow: 0 0 2px var(--media-inner-border);
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        position: relative;

        &>a {
          display: inline-block;

          &:first-of-type {
            width: 80px;
            height 80px;
            border-radius: 8px;
            overflow: hidden;

            &>img {
              width: 100%;
              height: 100%;
            }
          }

          &:nth-of-type(2) {
            // flex: 1 1 0;

            &>span {
              font-weight: bold;
              font-size: 17px;

              &:hover {
                text-decoration: underline;
              }
            }
          }
        }

        &>div:first-of-type {
          position: relative;
          border-radius: 6px;
          height: 36px;
          padding: 0 12px; 
          background-color: var(--secondary-button-background);
          margin-left: auto;
          display: flex;
          align-items: center;
          cursor: pointer;

          &>span {
            font-weight: bold;
            font-size: 15px;
          }

          &>div:last-of-type {
            position: absolute;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--hover-overlay);
            opacity: 0;
          }

          &:hover>div:last-of-type {
            opacity: 1;
          }

        }
      }
    }
  }
  
  &>.friendOptTab {
    position: absolute;
    // bottom: -55px;
    top: 0;
    left: 0;
    width: 344px;
    border-radius: 8px;
    background-color: white;
    box-shadow: 0 12px 28px 0 var(--shadow-2),
      0 2px 4px 0 var(--shadow-1);
    padding: 8px 0;
    
    &>div {
      height: 36px;
      border-radius: 8px;
      padding: 8px;
      margin: 0 8px;
      display: flex;
      align-items: center;

      &:hover {
        background-color: var(--secondary-button-background);
      }

      span {
        font-size: 15px;
        font-weight: 500;
      }

      &.unfriendBtn {
        i {
          background-image: url(/images/main/mainCenter/unfriend.png);
          background-position: 0 -25px;
          display: inline-block;
          height: 20px;
          width: 20px;
          margin-right: 12px;
        }
      }
    }
  }
}

#accountHoverTab {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 400px;
  padding: 16px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 0 8px 0 lightgray;
  z-index: 1;

  &>div {
    &:first-of-type {
      display: flex;
      align-items: center;

      &>div {
        &:first-of-type {
          width: 96px;
          height: 96px;
          border-radius: 50%;
          overflow: hidden;

          &>a>img {
            width: 96px;  
            height: 96px;
          }
        }
        
        &:last-of-type {
          flex-grow: 1;

          &>a>span {
            padding: 0 16px;
            font-size: 20px;
            font-weight: 700;
          }
        }
      }
    }

    &:last-of-type>div {
      display: flex;
      padding: 6px 0;
      gap: 0 8px;

      &>div {
        width: 48px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--secondary-button-background);
        border-radius: 8px;
        cursor: pointer;

        &:first-of-type {
          flex-grow: 1;

          &>img, svg {
            margin-right: 6px;
          }
        }

        img {
          width: 16px;
          height: 16px;
        }

        span {
          font-size: 15px;
          font-weight: 600;
        }
      }

      .friendOptBtn {
        position: relative;
      }

      .friendOptTab {
        position: absolute;
        bottom: -55px;
        left: 0;
        width: 344px;
        border-radius: 8px;
        background-color: white;
        box-shadow: 0 12px 28px 0 var(--shadow-2),
          0 2px 4px 0 var(--shadow-1);
        padding: 8px 0;
        
        &>div {
          height: 36px;
          border-radius: 8px;
          padding: 8px;
          margin: 0 8px;
          display: flex;
          align-items: center;

          &:hover {
            background-color: var(--secondary-button-background);
          }

          span {
            font-weight: 500;
          }

          &.unfriendBtn {
            i {
              background-image: url(/images/main/mainCenter/unfriend.png);
              background-position: 0 -25px;
              display: inline-block;
              height: 20px;
              width: 20px;
              margin-right: 12px;
            }
          }
        }
      }
    }
  }
}