  position: sticky;
  top: var(--header-height);

  &>div {
    flex: 0 1 908px;
    padding: 0 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;

    &>div:first-of-type {
      display: flex;

      &>a {
        display: inline-block;

        &>div {
