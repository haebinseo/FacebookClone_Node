            }

            div[id^="storyUserImg"] {
                position: absolute;
                top: 0;
                width: 40px;
                height: 40px;
                margin: 12px;
                background-color: var(--hover-overlay);
                border-radius: 100%;
            }

            .storyUserImg_exist {
                display: flex;
                align-items: center;
                justify-content: center;
                overflow-x: hidden;
                overflow-y: hidden;
