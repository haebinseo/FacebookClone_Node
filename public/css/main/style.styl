:root {
    --always-white: white;
    --primary-button-background: #1877f2;
    --secondary-icon: #65676b;
    --primary-text: #050505;
    --secondary-text: #65676b;
    --secondary-button-background: #e4e6eb;
    --hover-overlay: rgba(0,0,0,.05);
    --accent: rgb(24, 118, 242);
    --divider: #ced0d4;
    --comment-background: #f0f2f5;
    --surface-background: #ffffff;
    --new-post-hover-background: #f2f2f2;
    --overlay-alpha-80: rgba(244, 244, 244, 0.8);
    --divider: #CED0D4;
    --disabled-button-background: #E4E6EB;

    --shadow-2: rgba(0,0,0,.2);
    --fds-soft: cubic-bezier(.08, .52, .52, 1);
    --fds-fast: .2s;

    --header-height: 60px;
}

* {
    box-sizing: border-box;
}

ul {
    list-style-type: none;
    padding-inline-start: 0;
    margin: 0;
}

a {
    text-decoration: none;
    color: var(--primary-text);

    &:visited {
        color: var(--primary-text);
    }
}

input, textarea {
    outline: none;
    
    &:focus::placeholder {
        color: rgba(0, 0, 0, 0.2);
    }
}

body {
    display: grid;
    grid-template-rows: var(--header-height) 1fr;
    font-family: "fontello", Helvetica, Arial, sans-serif; 
    margin: 0;
    background-color: #F0F2F5;

    &>div:first-of-type  {
        position: relative;

        &>div {
            display: flex;
            align-items: center;
            height: 60px;
        }
    }
}

.invisible {
    display: none;
}

#headerLeft {
    position: fixed;
    left: 0;
    top: 0;
    width: 112px;
    padding: 0 16px;
    z-index: 2;

    &>a {
        margin-right: 8px;
    }

    &>div {
        position: absolute;
        top: 19px;
        left: 75px;
        color: #606770;
        font-size: 20px;
    }

    &>form>input {
        min-width: 40px;
        width: 100%;
        height: 40px;
        padding: 9px 16px;
        background-color: var(--comment-background);
        border-radius: 50px;
        font-size: 15px;
        text-indent: 20px;
        border: 0;
    }
}

#headerCenter {
    position: fixed;
    width: 100%;
    box-shadow: 0 0 5px 1px rgba(0,0,0,.1);
    background-color: var(--surface-background);
    justify-content: center;
    padding: 0 110px;
    z-index: 1;

    &>a {
        flex-grow: 1;
        height: 52px;
        min-width: 50px;
        max-width: calc(calc(680px - 32px)/5);

        &>div {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 8px;

            &>svg {
                fill: var(--secondary-icon);
            }

            &:hover {
                background-color: #f2f2f2;
            }
        }

        .selected {
            position: relative;

            &>svg {
                fill: var(--primary-button-background);
            }

            &:hover {
                background-color: unset;
            }

            &::after {
                content: "";
                position: absolute;
                bottom: -4px;
                width: 100%;
                border-bottom: 3px solid var(--primary-button-background);
            }
        }

        &+a {
            margin-left: 8px;
        }

        &:last-of-type {
            display: none;
        }
    }

}

#headerRight {    
    justify-content: space-around;
    position: fixed;
    right: 0;
    top: 0;
    padding-right: 6px;
    z-index: 2;

    &>div {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 10px;

        width: 40px;
        height: 40px;
        border-radius: 100%;
        background-color: var(--secondary-button-background);
    
        &:hover {
            background-color: #D8DADF;
            cursor: pointer;
        }
    }

    #user {
        width: 91px;
        height: 36px;
        border-radius: 18px;
        background-color: unset;
        position: relative;

        &:hover {
            background-color: var(--hover-overlay);
        }

        &>img {
            width: 28px;
            height: 28px;
            border-radius: 100%;
        }

        &>div {
            padding: 0 5px 2px;
            font-weight: 600;
            font-size: 15px;
        }
    }
}

