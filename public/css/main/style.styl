#mainLeft>div {
  ul {
    flex-shrink: 0;

    #mainLeftUserImg {
      border-radius: 100%;
    }

    li {
      padding: 0 8px;

      &>a>div {
        display: flex;
        align-items: center;
        padding: 0 8px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 15px;

        &:hover {
          background-color: #E4E6E9;
        }

        &>img {
          margin: 8px 12px 8px 0;
          width: 36px;
          height: 36px;
        }
      }
    }

    #mainLeftMore {
      display: flex;
      align-items: center;
      justify-content: center;

      font-weight: 600;
      font-size: 15px;
      margin: 8px 16px;

      border-radius: 6px;
      height: 36px;
      background-color: var(--secondary-button-background);

      &:hover {
        background-color: #E4E6E9;
      }

      img {
        margin-left: 5px;
      }
    }

    #mainLeftMore ~ li {
      display: none;
    }

    #mainLeftDirectImg {
      width: 36px;
      height: 36px;
      border: 1px solid #a7bad8;
      border-radius: 8px;
      margin: 8px 12px 8px 0;

      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;

      &>img {
        width: 100%;
        height: 100%;
      }
    }
  }

  &>div {
    flex-shrink: 0;
    padding: 16px 24px;
    font-size: 12px;
    margin-top: auto;
  }
}

.icon--adchoices {
  display: inline-block;
  width: 16px;
  height: 16px;
  background-image: url(/images/login/adchoices.png);
  background-position: 0 -67px;
  filter: grayscale(1);
}

.listDivider {
  border-bottom: 1px solid var(--divider);
  margin: 16px 16px 12px;
}

.listName {
  color: var(--secondary-text);
  font-weight: 600;
  font-size: 17px;
  padding: 0 16px 8px;
}


#mainCenter {
  flex: 1 1 50vw;
  padding: 0 32px;

  display: flex;
  flex-direction: column;
  align-items: center;

  &>div {
    max-width: 500px;
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 25px;
  }
}


#mainRight>div {
  #ads {
    &>div {
      font-size: 16px;
      font-weight: 600;
      color: var(--secondary-text);
      margin-bottom: 10px;
      padding: 0 16px;
    }

    &>a>div {
      display: flex;
      align-items: center;
      padding: 8px 8px;
      margin: 0 8px;
      border-radius: 6px;
    
      &>div:first-of-type  {
        width: 40%;

        &>img {
          width: 100%;
          border-radius: 8px;
        }
      }

      &>div:last-of-type  {
        width: 60%;
        padding: 15px;
        word-break: keep-all;

        &>span {
          display: inline-block;

          &:first-of-type {
            font-weight: 500;
            font-size: 15px;
            margin-bottom: 10px;
          }

          &:last-of-type {
            font-size: 13px;
            color: var(--secondary-text);
          }
        }
      }

      &:hover {
        background-color: var(--hover-overlay);
      }
    }
  }

  #contacts {
    &>.listName  {
      display: flex;
      align-items: center;
      justify-content: space-between;

      &>div {
        &:last-of-type {
          display: flex;
        }

        &>div {
          width: 32px;
          height: 32px;
          margin-left: 8px;
          border-radius: 100%;
          display: flex;
          align-items: center;
          justify-content: center;

          &:hover {
            background-color: var(--hover-overlay);
          }
        }
      }
    }

    li {
      position: relative;
      display: flex;
      padding: 0 8px;

      &>a {
        flex: 1 0 0;

        &>div {
          display: flex;
          align-items: center;
          padding: 6px 8px;
          border-radius: 6px;

          &>img {
            width: 36px;
            height: 36px;
            margin-right: 15px;
            border-radius: 100%;
          }

          &:hover {
            background-color: var(--hover-overlay);
          }
        }
      }
    }

    &>.contactHoverTab {
      position: fixed;
      top: 0;
      left: 0;
      z-index: 2;
      // transform: translate(-408px, -40px);
      display: flex;
      align-items: center;
      // flex-direction: column;
      width: 400px;
      padding: 16px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 0 8px 0 lightgray;

      &>div {
        &:first-of-type {
          width: 96px;
          height: 96px;
          border-radius: 50%;
          overflow: hidden;

          &>a>img {
            width: 96px;  
            height: 96px;
          }
        }
        
        &:last-of-type {
          flex-grow: 1;

          &>a>span {
            padding: 0 16px;
            font-size: 20px;
            font-weight: 700;
          }
        }
      }
    }
  }
}

@media(min-height: 790px){
  #mainCenter>div {
    max-width: 680px;
  }
}

@media (max-width: 1099px){
  main>div:first-of-type {
    display: none;
  }
}

@media (max-width: 900px){
  main>div:last-of-type {
    display: none;
  }
}


@media (max-width: 900px){
  body {
    min-width: 450px;
  }
}
