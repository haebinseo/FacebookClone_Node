                    }

                    img {
                        margin-right: 8px;
                    }
                }
            }
        }

        #newPostTab {
            &>div {
                position: fixed;
                top: 0px;
                left 0px;
                height 100vh;
                width: 100vw;
                background-color: var(--overlay-alpha-80);
                z-index: 1;
            }

            form {
