            flex-direction: column;

            &>div{
                &:first-of-type {
                    display: flex;

                    &>img {
                        width: 40px;
                        height: 40px;
                        border-radius: 100%;
                        margin-right: 8px;
                    }

                    div {
                        border-radius: 20px;
                        background-color: var(--comment-background);
                        flex-grow: 1;
                        padding: 0 12px;
                        display: flex;
                        align-items: center;
                        color: var(--secondary-text);
                        cursor: pointer;

