body {
  background-color: #F0F2F5;
}

main {
  display: flex;
  min-height: calc(100vh - var(--header-height));

  &>div {
    min-height: inherit;

    &:not([id="mainCenter"]) {
      max-width: 360px;
      flex: 1 1 280px;

      &>div {
        padding-top: 16px;
        // padding: 16px 8px 0 8px;
        overflow-y: auto;
        overscroll-behavior-y: contain;
        /* will-change: transform,scroll-position; */

        display: flex;
        flex-direction: column;
        position: -webkit-sticky;
        position: sticky;
        top: var(--header-height);
        min-width: inherit;
        max-width: inherit;
        width: inherit;
        min-height: inherit;
        height: 0;
      }
    }
  }
}

