.noScrollByHeader {
  overflow-y: hidden;
}

#header {
  position: relative;

  &>div {
    display: flex;
    align-items: center;
    height: var(--header-height);
  }
}

#headerLeft {
  position: fixed;
  left: 0;
  top: 0;
  width: 112px;
  padding: 0 16px;
  z-index: 4;

  &>a {
    margin-right: 8px;
  }

  &>form {
    &>div {
      position: absolute;
      top: 19px;
      left: 75px;
      color: #606770;
      font-size: 20px;
    }

    &>label {
      position: absolute;
      top: 19px;
      left: 75px;
      color: #606770;
      font-size: 20px;
      cursor: pointer;
    }

    &>input#hashtagInput {
      min-width: 40px;
      width: 100%;
      height: 40px;
      padding: 9px 16px;
      background-color: var(--comment-background);
      border-radius: 50px;
      font-size: 15px;
      text-indent: 20px;
      border: 0;
    }
  }
}

#headerCenter {
  position: fixed;
  width: 100%;
  box-shadow: 0 0 5px 1px rgba(0,0,0,.1);
  background-color: var(--surface-background);
  justify-content: center;
  padding: 0 110px;
  z-index: 1;

  &>a {
    flex-grow: 1;
    height: 52px;
    min-width: 50px;
    max-width: calc(calc(680px - 32px)/5);

    &>div {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 8px;

      &>svg {
        fill: var(--secondary-icon);
      }

      &:hover {
        background-color: #f2f2f2;
      }
    }

    .selected {
      position: relative;

      &>svg {
        fill: var(--primary-button-background);
      }

      &:hover {
        background-color: unset;
      }

      &::after {
        content: "";
        position: absolute;
        bottom: -4px;
        width: 100%;
        border-bottom: 3px solid var(--primary-button-background);
      }
    }

    &+a {
      margin-left: 8px;
    }

    &:last-of-type {
      display: none;
    }
  }

}

#headerRight {    
  position: fixed;
  right: 0;
  top: 0;
  padding-right: 6px;
  z-index: 4;

  &>div {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 8px;
    border-radius: 100%;
    background-color: var(--secondary-button-background);
    cursor: pointer;

    &>a {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  
    &:hover {
      background-color: #D8DADF;
    }
  }

  &>#user {
    width: 91px;
    height: 36px;
    border-radius: 18px;
    background-color: unset;

    &:hover {
      background-color: var(--hover-overlay);
    }

    &>a {
      &>img {
        width: 28px;
        height: 28px;
        border-radius: 100%;
      }

      &>div {
        padding: 0 5px 2px;
        font-weight: 600;
        font-size: 15px;
      }
    }
  }

  #alarm, #messenger {
    position: relative;

    #unreadAlarmCount, #unreadMessageCount {
      position: absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      right: -6px;
      top: -6px;
      width: 20px;
      height: 20px;
      background-color: #fa3e3e;
      border-radius: 50%;
      color: #fff;
      font-size: 13px;
    }
  }
}

