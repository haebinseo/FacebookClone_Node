#hashtagTab {
  position: fixed;
  top: 55px;
  left: 90px;
  box-shadow: 0 12px 28px 0 var(--shadow-2), 0 2px 4px 0 var(--shadow-1);
  background-color: white;
  border-radius: 8px;
  width: 204px;
  z-index: 4;

  li {
    border-radius: 8px;
    padding: 4px 4px;
    margin: 0 4px;
    cursor: pointer;

    &:hover {
      background-color: var(--hover-overlay);
    }

    &:first-of-type {
      margin-top: 4px;
    }
    
    &:last-of-type {
      margin-bottom: 4px;
    }
  }
}

#newPostTab {
  &>div {
    position: fixed;
    top: 0px;
    left 0px;
    height 100vh;
    width: 100vw;
    background-color: var(--overlay-alpha-80);
    z-index: 3;
  }

  form {
    display: flex;
    flex-direction: column;
    position: fixed;
    left: 50%;
    top: 50%;
    width: 500px;
    min-height: 488px; 
    transform: translate(-50%, -50%);
    background-color: white;
    box-shadow: 0 0 28px 1px rgba(0,0,0,.25);
    // box-shadow: 0 12px 28px 0 rgba(0,0,0,.1);
    border-radius: 8px; 
    z-index: 4;

    &>div {
      display: flex;
      padding: 16px 16px;

      &:first-of-type {
        position: relative;
        align-items: center;
        justify-content: center;
        height: 60px;
        font-size: 20px;
        font-weight: bold;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);

        &>div {
          position: absolute;
          top: 12px;
          right: 12px;
          border-radius: 50%;
          height: 36px;
          width: 36px;
          background-color: var(--secondary-button-background);
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;

          &:hover {
            background-color: #D1D3D8;
          }

          &>i {
            display: inline-block;
            background-image: url(/images/main/mainCenter/d4D8oGNn1YF.png);
            background-position-x:0px;
            background-position-y:-883px;
            height: 20px;
            width: 20px; 
            filter: invert(0.39) sepia(0.21) saturate(2) saturate(1.095) hue-rotate(174deg) brightness(0.94) contrast(0.86);
          }
        }
      }    
      
      &:nth-of-type(2) {
        flex-direction: column;
        flex-grow: 1;
        gap: 4px;
        padding: 16px 8px;

        &>div:first-of-type  {
          display: flex;
          align-items: center;
          font-size: 15px;
          font-weight: bold;
          height: 56px;
          padding: 0 8px;

          &>img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 8px;
          }
        }

        &>div:nth-of-type(2)  {
          max-height: 500px;
          display: flex;
          flex-direction: column;
          overflow-y: auto;
          padding: 0 8px;

          &>textarea {
            flex-shrink: 0;
            font-size: 24px;
            border: none;
            resize: none;
            overflow-y: visible;
          }

          &>.photoPreviewArea {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;

            &>.photoPreview {
              flex: 1 0 200px;

              &>div {
                padding-top: 100%;
                position: relative;

                &>img {
                  position: absolute;
                  top: 0;
                  width: 100%;
                  height: 100%;
                  object-fit: cover;
                  border-radius: 8px;
                  border: 1px solid var(--divider);
                }

                &>div {
                  position: absolute;
                  top: 8px;
                  right: 6px;
                  width: 36px;
                  height: 36px;
                  border-radius: 50%;
                  background-color: white;
                  box-shadow: 0 0 0 1px var(--shadow-1);
                  transform: scale(0.8);
                  cursor: pointer;
                  display: flex;
                  align-items: center;
                  justify-content: center;

                  &>i {
                    display: inline-block;
                    background-image: url(/images/main/mainCenter/d4D8oGNn1YF.png);
                    background-position: 0 -883px;
                    filter: var(--filter-secondary-icon);
                    width: 20px;
                    height: 20px;
                  }

                  &>div {
                    width: 100%;
                    height: 100%;
                    border-radius: 50%;
                    position: absolute;
                    top: 0;
                    left: 0;
                    background-color: var(--hover-overlay);
                    opacity: 0;
                  }

                  &:hover > div {
                    opacity: 1;
                  }
                }
              }
            }
          }
        }
      }
      
      &:last-of-type {
        flex-direction: column;
        justify-content: space-between;
        height: 141px;

        &>div {
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 8px;
          border: 1px solid var(--divider);
          border-radius: 8px;

          span {
            font-size: 15px;
            font-weight: bold;
            padding: 0 8px;
          }

          &>label {
            cursor: pointer;

            &>div {
              height 36px;
              width: 36px;
              border-radius: 50%;
              border: none;
              display: flex;
              align-items: center;
              justify-content: center;

              &:hover {
                background-color: var(--hover-overlay);
              }
                
              &>i {
                display: inline-block;
                height 24px;
                width: 24px;
              }
              .icon--photo {
                background-image: url(/images/main/mainCenter/C6EldyzVPp5.png);
                background-position-x: 0px;
                background-position-y: -208px;
              }
            }
          }
        }

        button {
          border-radius: 6px;
          font-size: 15px;
          font-weight: bold;
          color: white;
          border: none;
          height: 35px;
          background-color: var(--primary-button-background);
          cursor: pointer;

          &:hover {
            background-color: #0076E4;
          }

          &[disabled] {
            background-color: var(--disabled-button-background);
            color: darkgray;
            cursor: default;
          }
        }
      }
    }
  }
}

#createTab {
