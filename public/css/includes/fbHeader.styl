    align-items: center;
    padding: 0 8px 8px;
    
    &>span {
      font-size: 24px;
      font-weight: 700;
    }
  }

  &>div:nth-of-type(2) {
    display: flex;
    flex-direction: column;

    &>.alarm {
      display: flex;
      padding: 0 8px;
      border-radius: 8px;
      cursor: pointer;
      position: relative;

      &:hover>div:last-of-type {
        opacity: 1;
      }

      &>div {
        z-index: 0;

        &:first-of-type {
          width: 56px;
          height 56px;
          border-radius: 50%;
          margin: 8px 12px 8px 0;
          overflow: hidden;

          img {
            width: 100%;
            height 100%;
          }
        }

        &:nth-of-type(2) {
          display: flex;
          flex-direction: column;
          justify-content: center;
          padding: 8px 0;

          &>span:first-of-type {
            font-size: 15px;
            color: var(--secondary-text);

            &>span {
              font-weight: bold;
            }
          }

          &>span:nth-of-type(2) {
            font-size: 15px;
            color: var(--secondary-text);
          }

          &>div {
            display: flex;
            gap: 8px;
            padding-top: 8px;

            &>div {
              flex: 1 1 0;
              height: 36px;
              border-radius: 6px;
              font-size: 15px;
              font-weight: bold;
              display: flex;
              align-items: center;
              justify-content: center;
              // z-index: 1;
            }

            .confirmFriendBtn {
              background-color: var(--primary-button-background);
              color: white;
            }

            .deleteFriendBtn {
              background-color: var(--secondary-button-background);
            }
          }
          
          &.unread {
            &>span:first-of-type {
              color: black;
            }

            &>span:nth-of-type(2) {
              color: var(--accent);
              font-weight: bold;
            }
          }
        }

        &:last-of-type {
          position: absolute;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          background-color: var(--hover-overlay);
          border-radius: 8px;
          opacity: 0;
          z-index: -1;
        }
      }
    }

    &>#noAlarm {
      padding: 12px 0;
      color: var(--secondary-text);
      text-align: center;
    }
  }
}

#accountTab {
  position: fixed;
  top: 55px;
  right: 16px;
  box-shadow: 0 12px 28px 0 var(--shadow-2), 0 2px 4px 0 var(--shadow-1);
  background-color: white;
  border-radius: 8px;
  width: 360px;
  display: flex;
  flex-direction: column;
  padding: 8px 8px;
  cursor: default;
  z-index: 4;

  #myProfile {
    display: flex;
    padding: 0 8px;
    border-radius: 8px;
    cursor: pointer;
    position: relative;

    &>div {
      &:first-of-type {
        border-radius: 50%;
        margin: 8px 12px 8px 0;
        overflow: hidden;

        img {
          width: 60px;
          height 60px;
        }
      }

      &:nth-of-type(2) {
        display: flex;
        flex-direction: column;
        justify-content: center;
        &>span:first-of-type {
          font-size: 17px;
          font-weight: bold;
        }

        &>span:last-of-type {
          font-size: 15px;
          color: var(--secondary-text);
        }
      }

      &:last-of-type {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: var(--hover-overlay);
        border-radius: 8px;
        opacity: 0;

        &:hover {
          opacity: 1;
        }
      }
    }
  }

  .tabDivider {
    border-bottom: 1px solid var(--divider);
    margin: 8px;
  }

  #logout {
    display: flex;
    align-items: center;
    padding: 0 8px;
    border-radius: 8px;
    cursor: pointer;
    position: relative;
    
    div {
      &:first-of-type {
        width: 36px;
        height: 36px;
        background-color: var(--secondary-button-background);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 8px 12px 8px 0;

        i {
          background-image: url(/images/main/headRight/_AgLJqLL0tL.png);
          background-position: 0 -1011px;
          filter: var(--filter-secondary-icon);
          height: 20px;
          width: 20px;
        }
      }

      &:nth-of-type(2) {
        font-size: 15px;
      }

      &:last-of-type {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: var(--hover-overlay);
        border-radius: 8px;
        opacity: 0;

        &:hover {
          opacity: 1;
        }
      }
    }
  }

  &>div:last-of-type {
    padding: 4px 8px;
    font-size: 13px;
    color: var(--secondary-text);
  }
}

@media (min-width: 1260px){
  #headerLeft {
    width: 320px;
  }
}

@media (max-height: 789px) and (min-width: 1100px), (max-width: 1379px) and (min-width: 1100px){
  #headerCenter>a {
    max-width: calc(calc(590px - 32px)/5);
  }
}

@media (max-width: 1099px){
  #headerCenter>a {
    max-width: calc(15vw - 55px);

    &:nth-of-type(5), &:last-of-type {
      display: none;
    }
  }
}

@media (max-width: 700px){
  #headerCenter {
    justify-content: flex-start;

    &>a:not(:last-of-type) {
      display: none;
    }
  }
}

@media (max-width: 1260px){
  #headerRight #user {
    display: none;
  }
}
