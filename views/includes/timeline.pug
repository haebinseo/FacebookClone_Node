          -let idx; for(idx = 0; idx < 5; idx++) { if (timeArr[idx] === 0) break; }
          -if(idx === 0) { timeArr[0] += 1; idx += 1; }
          span #{timeArr[idx-1]}#{units[idx-1]}
        div
          img(src="/images/main/mainCenter/BOCzaD2rwOa.png" alt="")

      //- post main
      div.postMain
        div= post.content
        div
          -const photoLen = post.photos.length;
          if photoLen > 0
            div
              div
                div.firstPhotoLine
                  div
                    div
                      img.postPhoto(src=post.photos[0].url, alt="")
                  if photoLen > 1
                    div
                      div
                        img.postPhoto(src=post.photos[1].url, alt="")
                if photoLen > 2
                  div.secondPhotoLine
                    div
                      img.postPhoto(src=post.photos[2].url, alt="")
                    if photoLen > 3
                      div
                        img.postPhoto(src=post.photos[3].url, alt="")
