//- posts
#postArea
  for post in posts
    div.postEffects
      input.post-user-id(type='hidden' value=post.user.id)
      input.post-id(type='hidden' value=post.id)
      //- post head
      div.postHeader(data-post-author-id=post.user.id)
        div
          a(href=`/profile/${post.user.id}`)
            img.accountHoverTabTrigger(src=post.user.profilePhoto alt="")
        div
          a(href=`/profile/${post.user.id}`)
            span.accountHoverTabTrigger= post.user.name
          -const units = ['분', '시간', '일', '월', '년'];
