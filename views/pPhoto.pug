extends profile

block append css
  link(rel="stylesheet", href="/css/profile/photo/style.css")

block append content
  div#main
    div#profilePhoto
      div.postEffects
        div
          span 사진
          div
            span 사진 추가
            div
        div
          each photo in photos
            div
              img(src=photo.url, alt="")
              div.photoOptBtn
                i
                .photoOptTab.invisible
                  div.downloadBtn
                    a(href=photo.url download)
                      i
                      span 다운로드
                  div.setProfilePhotoBtn(data-pid=photo.id)
                    i
                    span 프로필 사진으로 지정

block append script
  script(src="/js/profile/photo.js")
